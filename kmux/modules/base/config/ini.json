{% extends "modules/root/config/ini.json" %}
{% block child %}
"dist": "trusty",
"os": "debian",
"basepackages": ["syslog-ng", "ssmtp" ,"cron-apt", "libnss-ldap" ,"libpam-ldap" ,"ldap-utils"],

"config": {
    "general": {
        "arch": "i386",
        "stage": "/stage",
        "vserver-path": "/var/lib/lxc/vserver",
        "handle-deamons": "false",
        "hostname" : "kmuxNG",
        "kernel" : "3.4.5-030405-kmux-pae"
    },
    "locales": {
        "lang": "de",
        "locale": "de_DE"
    },
    "fs": {
        "raidlevel": 1,
        "disk0": "/dev/sda"
    }
}
{% endblock %}

